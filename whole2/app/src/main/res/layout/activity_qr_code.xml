<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            app:layout_scrollFlags="scroll|enterAlways"></androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".QrCode">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_id"
                        android:layout_width="match_parent"
                        android:layout_height="127dp"
                        android:layout_gravity="center"
                        android:background="#008BC34A"
                        android:gravity="center"
                        android:textColor="#4CAF50"
                        android:textSize="56sp" />

                    <View
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="24dp" />

                    <WebView
                        android:id="@+id/web_miaopan"
                        android:layout_width="match_parent"
                        android:layout_height="228dp">

                    </WebView>

                    <View
                        android:id="@+id/view18"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="群体表型信息"
                            android:textColor="#000000"
                            android:textSize="24sp" />

                        <View
                            android:id="@+id/view17"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/heng" />

                        <LinearLayout
                            android:layout_width="356dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_zhugao"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:text="株高："
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/txt_yemianji"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:backgroundTint="#2196F3"
                                android:text="叶面积："
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/txt_jingcu"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:text="茎粗："
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/txt_yezhouchang"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:text="叶周长："
                                android:textSize="24sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/view20"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="位置信息"
                            android:textColor="#000000"
                            android:textSize="24sp" />

                        <View
                            android:id="@+id/view23"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/heng" />

                        <LinearLayout
                            android:layout_width="356dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_jingdu"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:text="经度："
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/txt_weidu"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:text="纬度："
                                android:textSize="24sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/view22"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="诊断信息"
                            android:textColor="#000000"
                            android:textSize="24sp" />

                        <View
                            android:id="@+id/view16"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/heng" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="387dp"
                            android:layout_height="396dp"
                            android:layout_gravity="center"
                            android:background="#00FFEB3B" />

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_float"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/map"
        app:backgroundTint="#4CAF50" />"
</androidx.coordinatorlayout.widget.CoordinatorLayout>