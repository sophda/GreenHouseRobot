<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFCBBF">

    <TextView
        android:id="@+id/unity_textView2"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="#CFCBBF"
        android:clickable="true"
        android:drawableTop="@drawable/heng"
        android:gravity="center"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/utxt_id"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:background="#008BC34A"
            android:gravity="center"
            android:textColor="#4CAF50"
            android:textSize="30sp" />

        <View
            android:id="@+id/view14"
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="群体表型信息"
            android:textColor="#000000"
            android:textSize="24sp" />

        <View
            android:id="@+id/view17"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/heng" />

        <LinearLayout
            android:layout_width="356dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/utxt_zhugao"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="株高："
                android:textSize="24sp" />

            <TextView
                android:id="@+id/utxt_yemianji"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:backgroundTint="#2196F3"
                android:text="叶面积："
                android:textSize="24sp" />

            <TextView
                android:id="@+id/utxt_jingcu"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="茎粗："
                android:textSize="24sp" />

            <TextView
                android:id="@+id/utxt_yezhouchang"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="叶周长："
                android:textSize="24sp" />
        </LinearLayout>

</LinearLayout>
</LinearLayout>